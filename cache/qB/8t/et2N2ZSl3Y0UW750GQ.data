/* MenÃº principal */
/* Desktop */
#nav-menu {
  list-style: none;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  position: fixed;
  width: 100%;
  background: lightgray;
  top: 0;
  margin: 0;
  height: 30px;
  z-index: 10;
  padding: 0;
  transition: max-height 0.3s ease, opacity 0.3s ease;
}

.hamburger {
  display: none;
  position: fixed; /* Asegura que no ocupa espacio cuando estÃ¡ oculto */
  top: 0;
  right: 0;
  background-color: lightgray;
  height: 30px;
  z-index: 12;
}

/* Mobile */
@media (max-width: 800px) {
    .hamburger-bar {
    display: flex;
    justify-content: center;   /* Centrado horizontal */
    align-items: center;       /* Centrado vertical si quisieras Ã­cono mÃ¡s grande */
    background-color: lightgray;
    height: 40px;              /* altura de la barra */
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 12;
  }

  #nav-menu {
    display: none; /* ðŸ”§ Oculto por defecto */
    flex-direction: column;
    align-items: flex-start;
    background-color: lightgray;
    position: fixed;
    top: 40px;
    left: 0;
    width: 100%;
    min-height: calc(100vh - 50vh);
    padding-top: 10px;
    z-index: 10;
  }

  #nav-menu.show {
    display: flex; /* âœ… Solo visible cuando tenga la clase 'show' */
  }

  #nav-menu li {
    padding: 12px 20px;
    width: 100%;
    text-align: left;
  }

  .hamburger {
    display: block; /* âœ… Ahora sÃ­ se ve el botÃ³n en mobile */
    position: fixed;
    top: 0;
    right: 0;
    height: 40px;
    z-index: 12;
    border: none;
    font-size: 20px;
    padding: 0 15px;
    cursor: pointer;
  }
}


/*Otro */
body {
    margin-top: 45px;
    font-family: "Catamaran", sans-serif;
}
.display-none {
    display: none;
}

/*Medidas responsive */

html, body {
  max-width: 100%;
  overflow-x: hidden;
}

img, iframe, table {
  max-width: 100%;
  height: auto;
}

/* Responsive */
@media all and (min-width: 400px) and (max-width: 800px){
    a {
        background: beige;
    }
    nav>ul {
        display: flex;
        flex-direction: column;
    }
    body {
        margin-top: 50px;
    }
    
}
